{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"oneOf": [
		{
			"$ref": "#/definitions/noProp"
		},
		{
			"$ref": "#/definitions/compoundProp"
		},
		{
			"$ref": "#/definitions/listProp"
		},
		{
			"required": ["ref"]
		}
	],
	"properties": {
		"ref": {
			"type": "string"
		}
	},
	"definitions": {
		"noProp": {
			"required": [
				"type"
			],
			"properties": {
				"type": {
					"enum": [
						"byte",
						"short",
						"int",
						"long",
						"float",
						"double",
						"byte_array",
						"string",
						"int_array",
						"long_array"
					]
				}
			}
		},
		"compoundProp": {
			"required": [
				"type"
			],
			"properties": {
				"type": {
					"enum": [
						"root",
						"compound"
					]
				},
				"children": {
					"type": "object",
					"patternProperties": {
						".*": {
							"$ref": "#"
						}
					}
				},
				"child_ref": {
					"type": "array",
					"items": {
						"type": "string"
					}
				}
			}
		},
		"listProp": {
			"required": [
				"type"
			],
			"properties": {
				"type": {
					"enum": [
						"list"
					]
				},
				"item": {
					"$ref": "#"
				}
			}
		}
	}
}